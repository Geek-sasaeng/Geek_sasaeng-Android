<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.geeksasaeng">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Utils.ApplicationClass"
        android:allowBackup="false"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Geeksasaeng"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signup.Basic.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Signup.Tos1Activity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Signup.Tos2Activity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Home.CreateParty.CreatePartyActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login.DormitoryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Signup.Naver.SignUpNaverActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Home.Party.ReportParty.PartyReportOptionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Home.Party.ReportParty.PartyReportNoOptionActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Home.Search.SearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Chatting.ChattingRoom.ChattingRoomActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Chatting.ChattingRoom.ChattingRoomForcedExitActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile.ProfileMyPreActivityActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile.MyInfoUpdate.ProfileMyInfoUpdateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile.MyInfoUpdate.ProfileMyInfoUpdatePwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile.CustomerService.ProfileCustomerServiceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile.ProfileCard.ProfileLevelIntroductionActivity"
            android:screenOrientation="portrait" />

        <!-- 카카오맵 APP KEY 추가 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="${kakaoNativeAppKey}" />

        <service
            android:name=".FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>