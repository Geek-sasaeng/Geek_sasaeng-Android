<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/spoqa_medium</item>

    </style>

    <style name="DormitoryPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:textColorPrimary"> @color/white </item>-->
        <item name="android:textColorPrimary"> #8C8C8C </item>
        <item name="android:textSize" > 20sp </item>
        <item name="android:fontFamily">@font/spoqa_medium</item>
    </style>

    <style name="NumPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary"> @color/top </item>
        <item name="android:textSize" > 19sp </item>
        <item name="android:fontFamily">@font/spoqa_medium</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent= "Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/spoqa_medium</item>
    </style>

    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_look_party_popup</item>
    </style>

    <!--아래 두개는 바텀시트 배경 투명하게 하기 위해 정의한 스타일들 -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>