<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/location_dialog_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/location_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수령 장소"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/location_dialog_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/location_dialog_back_btn"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            />

        <TextView
            android:id="@+id/location_dialog_search_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="입력하세요"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/location_dialog_search_btn"
            app:layout_constraintTop_toBottomOf="@id/location_dialog_title_tv"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <View
            android:id="@+id/location_dialog_search_underscore_view"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginTop="8dp"
            android:background="#a8a8a8"
            app:layout_constraintStart_toStartOf="@+id/location_dialog_search_tv"
            app:layout_constraintTop_toBottomOf="@+id/location_dialog_search_tv"
            app:layout_constraintEnd_toEndOf="@id/location_dialog_search_tv"/>

        <ImageView
            android:id="@+id/location_dialog_search_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/location_dialog_search_tv"
            app:layout_constraintTop_toTopOf="@id/location_dialog_search_tv"
            app:layout_constraintBottom_toBottomOf="@id/location_dialog_search_tv"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/location_dialog_loc_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_dialog_search_underscore_view"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/location_dialog_loc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어쩌구시 어쩌구동"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/location_dialog_loc_title_tv"
            app:layout_constraintTop_toTopOf="@id/location_dialog_loc_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/location_dialog_loc_title_tv"
            app:layout_constraintEnd_toEndOf="parent"/>


        <!--지도로 교체 필요-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_dialog_loc_title_tv"
            app:layout_constraintBottom_toTopOf="@id/location_dialog_next_btn"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/location_dialog_next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main"
            android:background="@drawable/round_border"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/location_dialog_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="60dp"
            />

        <TextView
            android:id="@+id/location_dialog_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/4"
            app:layout_constraintTop_toBottomOf="@id/location_dialog_next_btn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>