<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_customer_service_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_customer_service_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="@id/profile_customer_service_title"
            app:layout_constraintBottom_toBottomOf="@id/profile_customer_service_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/profile_customer_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객 센터"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--서비스 이용약관 동의-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_customer_service_tos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/profile_customer_service_toolbar">

        <TextView
            android:id="@+id/profile_customer_service_tos1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_medium"
            android:text="서비스 이용약관 동의"
            android:textColor="@color/top"
            android:textFontWeight="500"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profile_customer_service_tos1_btn"
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:src="@drawable/ic_arrow_right_profile"
            app:layout_constraintBottom_toBottomOf="@id/profile_customer_service_tos1_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_customer_service_tos1_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/profile_bottom_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="9dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_customer_service_tos1" />

    <!--개인정보 수집 및 이용동의-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_customer_service_tos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="28dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/profile_bottom_line1">

        <TextView
            android:id="@+id/profile_customer_service_tos2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_medium"
            android:text="개인정보 수집 및 이용동의"
            android:textColor="@color/top"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profile_customer_service_tos2_btn"
            android:layout_width="16.5dp"
            android:layout_height="16.5dp"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:src="@drawable/ic_arrow_right_profile"
            app:layout_constraintBottom_toBottomOf="@id/profile_customer_service_tos2_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_customer_service_tos2_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/profile_bottom_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="9dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_customer_service_tos2"/>


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginHorizontal="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_bottom_line2"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/main"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_customer_service_kakao_talk_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profile_customer_service_kakao_talk_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더 궁금한 점이 있나요?"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/spoqa_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오톡 문의하기"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintEnd_toStartOf="@id/profile_customer_service_kakao_talk_arrow_iv"
                app:layout_constraintBottom_toBottomOf="@id/profile_customer_service_kakao_talk_arrow_iv"
                app:layout_constraintTop_toTopOf="@id/profile_customer_service_kakao_talk_arrow_iv"
                android:layout_marginEnd="14dp"/>

            <ImageView
                android:id="@+id/profile_customer_service_kakao_talk_arrow_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="16dp"/>





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>