<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/step_four_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:text="휴대폰 번호 입력"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/step_four_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/step_four_phone_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/step_four_phone_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="- 제외 숫자만 입력하세요"
            android:maxLength="11"
            android:maxLines="1"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_1"
            android:backgroundTint="@color/gray_1"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="15sp"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/step_four_phone_send_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/step_four_phone_send_btn"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:textSize="15sp"
            android:text="인증번호 전송"
            android:fontFamily="@font/spoqa_medium"
            android:background="@drawable/selector_button"
            android:textColor="@drawable/selector_button_text"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/step_four_phone_reSend_btn"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:textSize="15sp"
            android:text="재전송 하기"
            android:fontFamily="@font/spoqa_medium"
            android:background="@drawable/selector_button"
            android:textColor="@drawable/selector_button_text"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/step_four_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="30dp"
        android:text="인증번호 입력"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_four_phone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/step_four_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/step_four_check_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/step_four_check_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="입력하세요"
            android:maxLength="6"
            android:maxLines="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_1"
            android:backgroundTint="@color/gray_1"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="15sp"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/step_four_phone_check_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/step_four_phone_check_btn"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:textSize="15sp"
            android:text="확인"
            android:fontFamily="@font/spoqa_medium"
            android:background="@drawable/selector_button"
            android:textColor="@drawable/selector_button_text"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/step_four_check_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00분 00초 남았어요"
        android:textColor="@color/main"
        android:textSize="13dp"
        android:fontFamily="@font/spoqa_medium"
        android:layout_marginStart="40dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/step_four_check"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/step_four_skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="#5B5B5B"
        android:fontFamily="@font/spoqa_medium"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/step_four_next_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/step_four_next_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/main"
        android:background="@drawable/round_border"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>