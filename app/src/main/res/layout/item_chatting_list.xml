<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_chatting_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_chatting_list_section"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <ImageView
                android:id="@+id/item_chatting_list_section_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_default_profile" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_chatting_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="맛있게 같이 먹어요"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_medium"
            android:layout_marginTop="20dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toEndOf="@id/item_chatting_list_section"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_chatting_list_last_chatting"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:textSize="13sp"
            android:text="최대글자수는열한개이다..."
            android:fontFamily="@font/spoqa_medium"
            android:maxLength="11"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="@id/item_chatting_list_title"
            app:layout_constraintTop_toBottomOf="@id/item_chatting_list_title" />

        <TextView
            android:id="@+id/item_chatting_list_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방금"
            android:textColor="@color/gray_2"
            android:textSize="11sp"
            android:layout_marginStart="19dp"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintStart_toEndOf="@id/item_chatting_list_last_chatting"
            app:layout_constraintTop_toTopOf="@id/item_chatting_list_last_chatting"
            app:layout_constraintBottom_toBottomOf="@id/item_chatting_list_last_chatting" />

        <TextView
            android:id="@+id/item_chatting_list_chatting_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+999"
            android:textColor="@color/main"
            android:textSize="11sp"
            android:fontFamily="@font/spoqa_medium"
            android:layout_marginStart="278dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_chatting_list_last_chatting"
            app:layout_constraintBottom_toBottomOf="@id/item_chatting_list_last_chatting" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>