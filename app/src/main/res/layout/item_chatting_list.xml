<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chatting_room_left"
        android:layout_width="73dp"
        android:layout_height="76dp"
        android:backgroundTint="@color/line"
        android:layout_marginStart="-23dp"
        android:layout_marginTop="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chatting_room_section"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/item_chatting_room_left"
        app:layout_constraintEnd_toEndOf="@id/item_chatting_room_left">

        <ImageView
            android:id="@+id/item_chatting_room_section_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_default_profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3"
        android:textColor="@color/top"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/item_chatting_room_section"
        app:layout_constraintEnd_toEndOf="@id/item_chatting_room_section"
        app:layout_constraintTop_toBottomOf="@id/item_chatting_room_section" />

    <TextView
        android:id="@+id/item_chatting_room_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="맛있게 같이 먹어요"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:fontFamily="@font/spoqa_medium"
        android:layout_marginTop="11dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toEndOf="@id/item_chatting_room_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_chatting_room_left" />

    <TextView
        android:id="@+id/item_chatting_room_last_chatting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:text="안녕하세요~!"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/item_chatting_room_title"
        app:layout_constraintEnd_toEndOf="@id/item_chatting_room_title"
        app:layout_constraintTop_toBottomOf="@id/item_chatting_room_title" />

    <View
        android:id="@+id/item_chatting_room_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_chatting_room_left"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>