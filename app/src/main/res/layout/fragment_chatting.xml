<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFDFE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/chatting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅"
        android:textColor="@color/top"
        android:fontFamily="@font/spoqa_bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chatting_storage_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_chatting_locker"
        app:layout_constraintBottom_toBottomOf="@id/chatting_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatting_title_tv" />

    <ImageView
        android:id='@+id/chatting_sort_img'
        android:layout_width="23dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_sort"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toBottomOf="@id/chatting_title_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/chatting_section_filter"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toTopOf="@id/chatting_sort_img"
        app:layout_constraintBottom_toBottomOf="@id/chatting_sort_img"
        app:layout_constraintStart_toEndOf="@id/chatting_sort_img">

        <RadioGroup
            android:id="@+id/chatting_section_rg"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="35dp">

            <RadioButton
                android:id="@+id/chatting_section_rb1"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="14dp"
                android:background="@drawable/spinner_outline_clicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:checked="true"
                android:fontFamily="@font/spoqa_medium"
                android:text="배달파티"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/chatting_section_rb2"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="14dp"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="심부름"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/chatting_section_rb3"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="14dp"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="거래"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

        </RadioGroup>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatting_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:overScrollMode="never"
        android:paddingVertical="6dp"
        android:paddingHorizontal="13dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/chatting_section_filter"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/chatting_list_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false" />

    <ImageView
        android:id="@+id/chatting_list_preparing_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_preparing"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chatting_section_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/animation_view_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/chatting_list_rv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:duplicateParentState="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading_data.json"
            app:lottie_loop="true"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>