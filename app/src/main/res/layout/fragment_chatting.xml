<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFDFE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/chatting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅"
        android:textColor="@color/top"
        android:fontFamily="@font/spoqa_medium"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO: 보관함 이미지로 변경하기 -->
    <ImageView
        android:id="@+id/chatting_locker_iv"
        android:layout_width="23dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_chatting_locker"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toTopOf="@id/chatting_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/chatting_title_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id='@+id/chatting_sort_img'
        android:layout_width="23dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_sort"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toBottomOf="@id/chatting_title_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/chatting_section_filter"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toTopOf="@id/chatting_sort_img"
        app:layout_constraintBottom_toBottomOf="@id/chatting_sort_img"
        app:layout_constraintStart_toEndOf="@id/chatting_sort_img">

        <RadioGroup
            android:id="@+id/chatting_section_rg"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="35dp">

            <RadioButton
                android:id="@+id/chatting_section_rb1"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:background="@drawable/spinner_outline_clicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:checked="true"
                android:fontFamily="@font/spoqa_medium"
                android:text="배달파티"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/chatting_section_rb2"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="심부름"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/chatting_section_rb3"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="거래"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

        </RadioGroup>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatting_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:overScrollMode="never"
        android:paddingVertical="6dp"
        android:paddingHorizontal="13dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/chatting_section_filter"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>