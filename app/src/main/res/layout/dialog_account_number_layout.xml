<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/account_dialog_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/account_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌번호 입력하기"
            android:textSize="18sp"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/account_dialog_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/account_dialog_back_btn"
            />

        <!--edittext밑줄 색상은 backgroundTint로 바꿀 수 있음-->
        <EditText
            android:id="@+id/account_dialog_bank_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="은행을 입력하세요"
            android:textColorHint="@color/gray_1"
            android:backgroundTint="@color/gray_0"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_dialog_title_tv"
            android:paddingStart="7dp"
            android:paddingBottom="13dp"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="40dp" />

        <EditText
            android:id="@+id/account_dialog_bank_number_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="계좌번호를 입력하세요"
            android:textColorHint="@color/gray_1"
            android:backgroundTint="@color/gray_0"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_dialog_bank_et"
            android:paddingStart="7dp"
            android:paddingBottom="13dp"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추후 수정이 가능합니다"
            android:textSize="13sp"
            android:textColor="@color/gray_2"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintBottom_toTopOf="@id/account_dialog_next_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="23dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/account_dialog_next_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/main"
            android:background="@drawable/round_border"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/spoqa_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/account_dialog_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/2"
            android:textSize="13sp"
            android:fontFamily="@font/spoqa_medium"
            android:textColor="@color/gray_1"
            app:layout_constraintTop_toBottomOf="@id/account_dialog_next_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>