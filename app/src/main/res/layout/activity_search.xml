<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/search_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="검색어를 입력하세요"
        android:textColorHint="@color/gray_0"
        android:textSize="20sp"
        android:textColor="@color/top"
        android:layout_marginTop="29dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/search_btn"/>

    <ImageView
        android:id="@+id/search_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search"
        android:scaleType="fitXY"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/search_et"
        app:layout_constraintBottom_toBottomOf="@id/search_et"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/search_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_0"
        android:layout_marginTop="13dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/search_et" />

    <TextView
        android:id="@+id/search_recent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 검색어"
        android:textColor="@color/top"
        android:textSize="18sp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/search_line"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recent_item_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_recent_tv" />

    <View
        android:id="@+id/search_line2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/line"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/search_recent_item_rv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/search_dormitory_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/top"
        android:textSize="18sp"
        android:text="기숙사 이름"
        android:layout_marginTop="21dp"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_line2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/top"
        android:textSize="18sp"
        android:text="Weekly TOP 10"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@id/search_dormitory_name_tv"
        app:layout_constraintTop_toTopOf="@id/search_dormitory_name_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="28dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_dormitory_name_tv" />

    <ImageView
        android:id="@+id/search_back_logo_ic"
        android:layout_width="72dp"
        android:layout_height="79dp"
        android:src="@drawable/ic_logo_search_back"
        android:layout_marginBottom="113dp"
        app:tint="#80F8FCFF"
        android:tintMode="src_atop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>