<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/login_logo_iv"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:src="@drawable/ic_logo"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/login_id_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintDimensionRatio="5.7:1"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintTop_toBottomOf="@id/login_logo_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/login_pwd_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/login_id_tv"
            app:layout_constraintStart_toStartOf="@id/login_id_tv"
            app:layout_constraintEnd_toEndOf="@id/login_id_tv" />

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="@color/white"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:background="@drawable/round_border"
            android:backgroundTint="@color/main"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@id/login_pwd_tv"
            app:layout_constraintStart_toStartOf="@id/login_id_tv"
            app:layout_constraintEnd_toEndOf="@id/login_id_tv" />

        <LinearLayout
            android:id="@+id/login_naver_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:background="@drawable/round_border"
            android:backgroundTint="#00C73C"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/login_login_btn"
            app:layout_constraintStart_toStartOf="@id/login_id_tv"
            app:layout_constraintEnd_toEndOf="@id/login_id_tv" >

            <ImageView
                android:id="@+id/login_naver_iv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/temp_naver" />

            <TextView
                android:id="@+id/login_naver_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네이버로 로그인"
                android:textColor="@color/white"
                android:fontFamily="@font/spoqa_medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="15dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/login_autologin_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동 로그인"
            android:checked="true"
            android:buttonTint="@color/main"
            android:textColor="#5B5B5B"
            android:fontFamily="@font/spoqa_medium"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/login_naver_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/login_signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textColor="#5B5B5B"
            android:fontFamily="@font/spoqa_medium"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/login_autologin_cb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>