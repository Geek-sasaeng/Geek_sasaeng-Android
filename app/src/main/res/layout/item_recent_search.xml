<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_recent_search_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:text="카테고리"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/item_recent_search_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_delete_ic"
        android:background="@android:color/transparent"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@id/item_recent_search_category"
        app:layout_constraintBottom_toBottomOf="@id/item_recent_search_category"
        app:layout_constraintStart_toEndOf="@id/item_recent_search_category" />

</androidx.constraintlayout.widget.ConstraintLayout>