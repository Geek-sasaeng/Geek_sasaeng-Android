<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Chatting.ChattingRoom.ChattingUserBottomFragment"
    app:layout_behavior="@string/bottom_sheet_behavior"
    style="@style/AppBottomSheetDialogTheme">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/upper_radius"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="32dp"
        >

        <ImageView
            android:id="@+id/user_position_iv"
            android:layout_width="8.5dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_heart_bar_chatting_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/user_position_tv"
            app:layout_constraintTop_toTopOf="@id/user_position_tv"
            app:layout_constraintBottom_toBottomOf="@id/user_position_tv"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/user_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="13sp"
            android:text="신입생 ㅣ 파티원"
            app:layout_constraintStart_toEndOf="@id/user_position_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="51dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="같이 먹자 냠냠"
            android:textSize="18sp"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            app:layout_constraintTop_toBottomOf="@id/user_position_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chatting_user_bottom_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:background="@drawable/round_border_button_gray1"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@id/user_name">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_report2"
                    android:layout_marginEnd="7dp"/>


                <TextView
                    android:id="@+id/chatting_user_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_medium"
                    android:textSize="15sp"
                    android:text="신고하기"
                    android:textColor="@color/top" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_my_chatting_profile_cv"
        app:cardElevation="0dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="36dp"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/item_my_chatting_profile_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_default_profile2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>