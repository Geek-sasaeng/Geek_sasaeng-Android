<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="314dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <!--하단 상세정보-->
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_profile_detail_bottom_cv"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dialog_profile_detail_card_cv"
        app:layout_constraintEnd_toEndOf="@id/dialog_profile_detail_card_cv"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_card_cv"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F5F9">

            <TextView
                android:id="@+id/dialog_profile_detail_id_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="12sp"
                android:fontFamily="@font/spoqa_medium"
                android:textColor="@color/gray_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="29dp"
                android:layout_marginStart="45dp"/>

            <TextView
                android:id="@+id/dialog_profile_detail_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEO01"
                android:textSize="15sp"
                android:fontFamily="@font/spoqa_medium"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_id_title_tv"
                app:layout_constraintStart_toStartOf="@id/dialog_profile_detail_id_title_tv"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/dialog_profile_detail_email_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="12sp"
                android:fontFamily="@font/spoqa_medium"
                android:textColor="@color/gray_2"
                app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_id_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="45dp"/>

            <TextView
                android:id="@+id/dialog_profile_detail_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NeO01@geeks.com"
                android:textSize="15sp"
                android:fontFamily="@font/spoqa_medium"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_email_title_tv"
                app:layout_constraintStart_toStartOf="@id/dialog_profile_detail_email_title_tv"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/dialog_profile_detail_phone_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="12sp"
                android:fontFamily="@font/spoqa_medium"
                android:textColor="@color/gray_2"
                app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_email_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="45dp"/>

            <TextView
                android:id="@+id/dialog_profile_detail_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-0000-0000"
                android:textSize="15sp"
                android:fontFamily="@font/spoqa_medium"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_phone_title_tv"
                app:layout_constraintStart_toStartOf="@id/dialog_profile_detail_phone_title_tv"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/dialog_profile_detail_sign_up_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_phone_tv"
                android:layout_marginTop="53dp"
                android:text="가입일 ㅣ 2022.01.02"
                android:textSize="12sp"
                android:textColor="@color/gray_2"
                android:layout_margin="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!--프로필 카드-->
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_profile_detail_card_cv"
        android:layout_width="314dp"
        android:layout_height="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_profile_detail_bottom_cv"
        android:layout_marginHorizontal="23dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_profile_detail_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dialog_profile_detail_blue_top"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/main">

                <!--회원 등급-->
                <TextView
                    android:id="@+id/dialog_profile_detail_blue_top_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신입생"
                    android:textSize="12sp"
                    android:fontFamily="@font/spoqa_bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:id="@+id/dialog_profile_detail_blue_top_bar"
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_white_bar"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@id/dialog_profile_detail_blue_top_grade"
                    app:layout_constraintTop_toTopOf="@id/dialog_profile_detail_blue_top_grade"
                    app:layout_constraintBottom_toBottomOf="@id/dialog_profile_detail_blue_top_grade"
                    android:layout_marginStart="12dp"/>

                <!--복학까지 남은 학점-->
                <TextView
                    android:id="@+id/dialog_profile_detail_blue_top_left_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="복학까지 5학점 남았어요"
                    android:textSize="12sp"
                    android:fontFamily="@font/spoqa_bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/dialog_profile_detail_blue_top_grade"
                    app:layout_constraintBottom_toBottomOf="@id/dialog_profile_detail_blue_top_grade"
                    app:layout_constraintStart_toEndOf="@id/dialog_profile_detail_blue_top_bar"
                    android:layout_marginStart="12dp"
                    />

                <ImageView
                    android:id="@+id/dialog_profile_detail_blue_top_more"
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right_white"
                    app:layout_constraintTop_toTopOf="@id/dialog_profile_detail_blue_top_left_credit"
                    app:layout_constraintBottom_toBottomOf="@id/dialog_profile_detail_blue_top_left_credit"
                    app:layout_constraintStart_toEndOf="@id/dialog_profile_detail_blue_top_left_credit" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_blue_top"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/dialog_profile_detail_bar_iv"
                    android:layout_width="24.32dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_profile_card_heart_bar_level1"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="-1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/dialog_profile_detail_nick_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEO1"
                    android:fontFamily="@font/spoqa_bold"
                    android:textSize="20sp"
                    android:textColor="@color/top"
                    app:layout_constraintBottom_toTopOf="@id/dialog_profile_detail_univ_tv"
                    app:layout_constraintStart_toEndOf="@id/dialog_profile_detail_bar_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="5.68dp"
                    android:layout_marginTop="34dp"/>

                <TextView
                    android:id="@+id/dialog_profile_detail_univ_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별별대학교"
                    android:fontFamily="@font/spoqa_medium"
                    android:textSize="13sp"
                    android:textColor="@color/gray_3"
                    android:layout_marginTop="9dp"
                    app:layout_constraintBottom_toTopOf="@id/dialog_profile_detail_dormitory_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_nick_name_tv"
                    app:layout_constraintStart_toStartOf="@id/dialog_profile_detail_nick_name_tv" />

                <TextView
                    android:id="@+id/dialog_profile_detail_dormitory_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별별학사"
                    android:fontFamily="@font/spoqa_medium"
                    android:textSize="13sp"
                    android:textColor="@color/gray_3"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/dialog_profile_detail_univ_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="31dp"
                    app:layout_constraintStart_toStartOf="@id/dialog_profile_detail_nick_name_tv" />

                <ImageView
                    android:id="@+id/dialog_profile_detail_shadow_iv"
                    android:layout_width="125.5dp"
                    android:layout_height="104.29dp"
                    android:layout_marginBottom="-6.5dp"
                    android:src="@drawable/ic_profile_shadow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/dialog_profile_detail_img_cv"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="31.5dp"
                    android:layout_marginBottom="6.5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="55dp">
                    <ImageView
                        android:id="@+id/dialog_profile_detail_img_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/profile_thumbs_up" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>