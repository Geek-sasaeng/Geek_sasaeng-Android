<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/report_party_option_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/report_party_option_back_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_back"
            android:backgroundTint="#D9D9D9"
            android:layout_marginLeft="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/report_party_option_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고하기"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/report_option_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="광고같아요"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_medium"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toBottomOf="@id/report_party_option_toolbar"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/report_option_et"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:hint="@string/party_report"
        android:maxLines="5"
        android:maxLength="100"
        android:lineHeight="25dp"
        android:scrollHorizontally="false"
        android:textColorHint="@color/gray_1"
        android:textSize="15sp"
        android:fontFamily="@font/spoqa_regular"
        android:layout_marginTop="23dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/report_option_tv" />

    <View
        android:id="@+id/report_option_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/line"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/report_option_et"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/report_option_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 사용자 차단하기"
        android:checked="true"
        android:textColor="@color/main"
        android:fontFamily="@font/spoqa_medium"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/report_option_line"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/report_option_cancel_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[프로필] > [설정] > [사용자 관리]에서 취소할 수 있습니다."
        android:textColor="@color/gray_2"
        android:textSize="15sp"
        android:fontFamily="@font/spoqa_regular"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/report_option_cb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/report_report_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/main"
        android:text="신고하기"
        android:textSize="20sp"
        android:fontFamily="@font/spoqa_bold"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>