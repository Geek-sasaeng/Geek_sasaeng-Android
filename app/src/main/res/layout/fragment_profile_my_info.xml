<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_my_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_my_info_back_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:padding="3dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="@id/profile_my_info_title"
            app:layout_constraintBottom_toBottomOf="@id/profile_my_info_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/profile_my_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 정보"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/profile_pencil_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="3dp"
            android:src="@drawable/ic_pencil_black"
            android:backgroundTint="#D9D9D9"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_my_info_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--프로필-->
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_user_img_cv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_width="166dp"
                android:layout_height="166dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profile_my_info_user_img_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_default_profile2"/>

                <ImageView
                    android:id="@+id/profile_my_info_user_img_change_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_change"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_my_info_dormitory_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기숙사"
                android:textColor="@color/gray_2"
                android:textSize="12sp"
                android:textFontWeight="500"
                android:fontFamily="@font/spoqa_medium"
                android:layout_marginTop="64dp"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_user_img_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_my_info_dormitory_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/gray_0"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_dormitory_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_dormitory_title_tv">

                <TextView
                    android:id="@+id/profile_my_info_dormitory_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별별학사"
                    android:textColor="@color/main"
                    android:textSize="15sp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/spoqa_medium"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="15dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_my_info_nickname_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/gray_2"
                android:textSize="12sp"
                android:textFontWeight="500"
                android:fontFamily="@font/spoqa_medium"
                android:layout_marginTop="47dp"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_dormitory_cv" />

            <TextView
                android:id="@+id/profile_my_info_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/top"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_nickname_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_nickname_title_tv" />

            <View
                android:id="@+id/profile_my_info_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_nickname_tv" />

            <TextView
                android:id="@+id/profile_my_info_id_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/gray_2"
                android:textSize="12sp"
                android:textFontWeight="500"
                android:fontFamily="@font/spoqa_medium"
                android:layout_marginTop="45dp"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_line1" />

            <TextView
                android:id="@+id/profile_my_info_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/top"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_id_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_id_title_tv" />

            <View
                android:id="@+id/profile_my_info_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_id_tv" />

            <TextView
                android:id="@+id/profile_my_info_email_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textColor="@color/gray_2"
                android:textSize="12sp"
                android:textFontWeight="500"
                android:fontFamily="@font/spoqa_medium"
                android:layout_marginTop="45dp"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_line2" />

            <TextView
                android:id="@+id/profile_my_info_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textColor="@color/top"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_email_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_email_title_tv" />

            <View
                android:id="@+id/profile_my_info_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_email_tv" />

            <TextView
                android:id="@+id/profile_my_info_phone_number_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textColor="@color/gray_2"
                android:textSize="12sp"
                android:textFontWeight="500"
                android:fontFamily="@font/spoqa_medium"
                android:layout_marginTop="45dp"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_line3" />

            <TextView
                android:id="@+id/profile_my_info_phone_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textColor="@color/top"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_phone_number_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_phone_number_title_tv" />

            <View
                android:id="@+id/profile_my_info_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_phone_number_tv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_my_info_logout_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/gray_0"
                android:layout_marginTop="57dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_line4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/profile_my_info_logout_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:fontFamily="@font/spoqa_medium"
                    android:textSize="15sp"
                    android:textFontWeight="500"
                    android:textColor="@color/top"
                    android:textStyle="bold"
                    android:lineHeight="12dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="36dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_app_ver_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_my_info_withdrawal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdrawal"
                android:textColor="@color/gray_2"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="38dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_logout_cv"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



