<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="206dp"
    android:layout_height="397dp"
    app:cardCornerRadius="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/dialog_leader_popup_option_btn"
            android:src="@drawable/ic_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="28dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_leader_popup_option_look_menu_tv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="메뉴판 보기"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_medium"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/dialog_leader_popup_option_line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_look_menu_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dialog_leader_popup_option_alarm_tv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="배달 완료 알림 보내기"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_medium"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/dialog_leader_popup_option_line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_alarm_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dialog_leader_popup_option_matching_end_tv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="매칭 마감하기"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_medium"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/dialog_leader_popup_option_line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_matching_end_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dialog_leader_popup_option_user_exit_tv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="강제 퇴장시키기"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_medium"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_line3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/dialog_leader_popup_option_line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_user_exit_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dialog_leader_popup_option_chatting_end_tv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="채팅 종료하기"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_medium"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_line4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/dialog_leader_popup_option_line5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_chatting_end_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dialog_leader_popup_option_chatting_exit_tv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="나가기"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_medium"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_leader_popup_option_line5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>