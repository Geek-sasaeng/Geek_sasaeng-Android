<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/step_naver_three_welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/top"
        android:fontFamily="@font/spoqa_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:text="긱사생에 오신 것을\n환영합니다"/>

    <CheckBox
        android:id="@+id/step_naver_three_agree_all_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="@id/step_naver_three_welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/step_naver_three_welcome_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관 전체동의"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_bold"
        app:layout_constraintStart_toEndOf="@id/step_naver_three_agree_all_cb"
        app:layout_constraintTop_toTopOf="@id/step_naver_three_agree_all_cb"
        app:layout_constraintBottom_toBottomOf="@id/step_naver_three_agree_all_cb"
        />

    <View
        android:id="@+id/step_naver_three_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/step_naver_three_agree_all_cb" />

    <CheckBox
        android:id="@+id/step_naver_three_agree1_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="@id/step_naver_three_welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/step_naver_three_line" />

    <TextView
        android:id="@+id/step_naver_three_agree1_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/main"
        android:fontFamily="@font/spoqa_regular"
        app:layout_constraintStart_toEndOf="@id/step_naver_three_agree1_cb"
        app:layout_constraintTop_toTopOf="@id/step_naver_three_agree1_cb"
        app:layout_constraintBottom_toBottomOf="@id/step_naver_three_agree1_cb"
        />

    <TextView
        android:id="@+id/step_naver_three_agree1_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용약관 동의"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_regular"
        app:layout_constraintStart_toEndOf="@id/step_naver_three_agree1_tv1"
        app:layout_constraintTop_toTopOf="@id/step_naver_three_agree1_cb"
        app:layout_constraintBottom_toBottomOf="@id/step_naver_three_agree1_cb"
        />

    <ImageView
        android:id="@+id/step_naver_three_agree1_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:padding="10dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_naver_three_agree1_cb"
        app:layout_constraintBottom_toBottomOf="@id/step_naver_three_agree1_cb"
        />

    <CheckBox
        android:id="@+id/step_naver_three_agree2_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/step_naver_three_welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/step_naver_three_agree1_cb" />

    <TextView
        android:id="@+id/step_naver_three_agree2_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/main"
        android:fontFamily="@font/spoqa_regular"
        app:layout_constraintStart_toEndOf="@id/step_naver_three_agree2_cb"
        app:layout_constraintTop_toTopOf="@id/step_naver_three_agree2_cb"
        app:layout_constraintBottom_toBottomOf="@id/step_naver_three_agree2_cb"
        />

    <TextView
        android:id="@+id/step_naver_three_agree2_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 수집 및 이용동의"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_regular"
        app:layout_constraintStart_toEndOf="@id/step_naver_three_agree2_tv1"
        app:layout_constraintTop_toTopOf="@id/step_naver_three_agree2_cb"
        app:layout_constraintBottom_toBottomOf="@id/step_naver_three_agree2_cb"
        />

    <ImageView
        android:id="@+id/step_naver_three_agree2_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/step_naver_three_agree2_cb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_naver_three_agree2_cb" />



    <Button
        android:id="@+id/step_naver_three_start_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/main"
        android:background="@drawable/round_border"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>