<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup_phone_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호 입력"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/spoqa_medium"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/signup_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/signup_phone_number_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/signup_phone_number_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="- 제외 숫자만 입력하세요"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="15sp"
            android:paddingTop="18dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="18dp"
            android:layout_marginLeft="27dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_phone_send_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="인증번호 전송"
            android:textSize="13sp"
            android:fontFamily="@font/spoqa_medium"
            android:elevation="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/round_border"
            android:backgroundTint="@color/white"
            android:textColor="@color/main" />

    </LinearLayout>

    <TextView
        android:id="@+id/signup_phone_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호 입력"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/spoqa_medium"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_phone_number" />

    <LinearLayout
        android:id="@+id/signup_phone_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/signup_phone_check_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/signup_phone_check_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="입력하세요"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="15sp"
            android:paddingTop="18dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="18dp"
            android:layout_marginLeft="27dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_phone_resend_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="재전송 하기"
            android:textSize="13sp"
            android:fontFamily="@font/spoqa_medium"
            android:elevation="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/round_border"
            android:backgroundTint="@color/white"
            android:textColor="@color/main" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00분 00초 남았어요"
        android:textColor="@color/main"
        android:fontFamily="@font/spoqa_medium"
        android:textSize="13sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/signup_phone_check"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup_phone_skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="#5B5B5B"
        android:fontFamily="@font/spoqa_medium"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>