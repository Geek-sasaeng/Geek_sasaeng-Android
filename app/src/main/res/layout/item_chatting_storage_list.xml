<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_chatting_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--채팅 보관함 리스트에 들어갈 아이템-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_chatting_storage_list_image_cv"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <ImageView
                android:id="@+id/item_chatting_storage_list_image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delivery_party_ic" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_chatting_storage_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="맛있게 같이 먹어요"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/spoqa_bold"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toEndOf="@id/item_chatting_storage_list_image_cv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_chatting_storage_list_image_cv"
            app:layout_constraintBottom_toBottomOf="@id/item_chatting_storage_list_image_cv"/>

        <ImageView
            android:id="@+id/item_chatting_storage_list_member_ic"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_member_gray"
            app:layout_constraintStart_toStartOf="@id/item_chatting_storage_list_image_cv"
            app:layout_constraintTop_toBottomOf="@id/item_chatting_storage_list_image_cv"
            android:layout_marginTop="13dp"
            android:layout_marginStart="5dp"
        />

        <TextView
            android:id="@+id/item_chatting_storage_list_member_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_medium"
            android:textColor="@color/gray_2"
            android:textSize="14sp"
            android:text="현재 인원"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/item_chatting_storage_list_member_ic"
            app:layout_constraintBottom_toBottomOf="@id/item_chatting_storage_list_member_ic"
            app:layout_constraintTop_toTopOf="@id/item_chatting_storage_list_member_ic" />

        <TextView
            android:id="@+id/item_chatting_storage_list_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_2"
            android:textSize="13sp"
            android:fontFamily="@font/spoqa_medium"
            android:text="음식 카테고리"
            app:layout_constraintStart_toEndOf="@id/item_chatting_storage_list_member_number_tv"
            app:layout_constraintBottom_toBottomOf="@id/item_chatting_storage_list_member_ic"
            app:layout_constraintTop_toTopOf="@id/item_chatting_storage_list_member_ic"
            android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/item_chatting_storage_list_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022.08.08"
            android:textColor="@color/gray_2"
            android:textSize="13sp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_chatting_storage_list_member_ic"
            app:layout_constraintBottom_toBottomOf="@id/item_chatting_storage_list_member_ic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>