<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_my_info_update_pwd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_my_info_update_pwd_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="@id/profile_my_info_update_pwd_title"
            app:layout_constraintBottom_toBottomOf="@id/profile_my_info_update_pwd_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/profile_my_info_update_pwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/profile_my_info_update_pwd_complete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:enabled="false"
            android:textColor="@color/bababa_color"
            android:textSize="16sp"
            android:textFontWeight="700"
            android:fontFamily="@font/spoqa_medium"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_pwd_toolbar">

        <TextView
            android:id="@+id/profile_my_info_update_pwd_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textColor="@color/gray_2"
            android:textSize="12sp"
            android:textFontWeight="500"
            android:fontFamily="@font/spoqa_medium"
            android:layout_marginTop="39dp"
            android:layout_marginStart="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/profile_my_info_update_pwd_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"
            android:backgroundTint="@color/gray_0"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:textFontWeight="500"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_pwd_title_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ToggleButton
            android:id="@+id/profile_my_info_pwd_toggle_btn"
            android:layout_width="17dp"
            android:layout_height="13dp"
            android:background="@drawable/selector_pwd"
            android:layout_marginEnd="9dp"
            app:layout_constraintTop_toTopOf="@id/profile_my_info_update_pwd_et"
            app:layout_constraintBottom_toBottomOf="@id/profile_my_info_update_pwd_et"
            app:layout_constraintEnd_toEndOf="@id/profile_my_info_update_pwd_et"
            android:textOff=""
            android:textOn=""
            android:onClick="togglePasswordVisibility"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/profile_my_info_update_pwd_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문자, 숫자 및 특수문자 포함 8자 이상으로 입력해주세요"
            app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_pwd_et"
            app:layout_constraintStart_toStartOf="@id/profile_my_info_update_pwd_et"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="11sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/error"/>

        <TextView
            android:id="@+id/profile_my_info_update_pwd_check_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textColor="@color/gray_2"
            android:textSize="12sp"
            android:textFontWeight="500"
            android:fontFamily="@font/spoqa_medium"
            android:layout_marginTop="19dp"
            android:layout_marginStart="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_pwd_info_tv" />

        <EditText
            android:id="@+id/profile_my_info_update_pwd_check_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"
            android:backgroundTint="@color/gray_0"
            android:textColor="@color/top"
            android:textSize="15sp"
            android:textFontWeight="500"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_pwd_check_title_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ToggleButton
            android:id="@+id/profile_my_info_pwd_check_toggle_btn"
            android:layout_width="17dp"
            android:layout_height="13dp"
            android:background="@drawable/selector_pwd"
            android:layout_marginEnd="9dp"
            app:layout_constraintTop_toTopOf="@id/profile_my_info_update_pwd_check_et"
            app:layout_constraintBottom_toBottomOf="@id/profile_my_info_update_pwd_check_et"
            app:layout_constraintEnd_toEndOf="@id/profile_my_info_update_pwd_check_et"
            android:textOff=""
            android:textOn=""
            android:onClick="togglePasswordVisibility"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/profile_my_info_update_pwd_check_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호가 다릅니다. 다시 확인해주세요"
            app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_pwd_check_et"
            app:layout_constraintStart_toStartOf="@id/profile_my_info_update_pwd_check_et"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="11sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/error"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



