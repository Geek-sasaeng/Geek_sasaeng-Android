<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id='@+id/search_detail_sort_img'
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_sort"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/search_detail_people_spinner"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/spinner_outline_unclicked"
        android:popupBackground="@drawable/spinner_outline_clicked"
        tools:listitem="@layout/item_delivery_people_spinner"
        android:spinnerMode="dropdown"
        android:entries="@array/home_dropdown1"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/search_detail_sort_img"
        app:layout_constraintBottom_toBottomOf="@id/search_detail_sort_img"
        app:layout_constraintStart_toEndOf="@id/search_detail_sort_img" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="@id/search_detail_people_spinner"
        app:layout_constraintBottom_toBottomOf="@id/search_detail_people_spinner"
        app:layout_constraintStart_toEndOf="@id/search_detail_people_spinner"
        app:layout_constraintEnd_toEndOf="parent">

        <!--아침,점심,저녁,야식 선택-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/search_detail_cb1"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_text_gray1_main_checked"
                android:fontFamily="@font/spoqa_medium"
                android:text="아침"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <CheckBox
                android:id="@+id/search_detail_cb2"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_text_gray1_main_checked"
                android:fontFamily="@font/spoqa_medium"
                android:text="점심"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <CheckBox
                android:id="@+id/search_detail_cb3"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_text_gray1_main_checked"
                android:fontFamily="@font/spoqa_medium"
                android:text="저녁"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <CheckBox
                android:id="@+id/search_detail_cb4"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_text_gray1_main_checked"
                android:fontFamily="@font/spoqa_medium"
                android:text="야식"
                android:gravity="center"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/search_detail_back_logo_ic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_logo"
        android:layout_marginBottom="113dp"
        app:tint="#DBF8FCFF"
        android:tintMode="src_atop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!--리사이클러뷰-->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/search_detail_swipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_detail_sort_img">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_detail_party_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="13dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_detail_sort_img"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!--불투명효과-->
    <TextView
        android:id="@+id/search_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false" />

    <!--로딩중 마크-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_progress_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_detail_swipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!--android:background="#40EFEFEF"-->

        <ProgressBar
            android:id="@+id/search_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--검색결과 없을 때 화면-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_no_result_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_detail_sort_img">

        <ImageView
            android:id="@+id/search_no_result_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_search_missing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/search_no_result_text1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요청하신 검색 결과가 없습니다."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_no_result_logo_iv"
            android:layout_marginTop="35dp"
            android:textSize="14sp"
            android:fontFamily="@font/spoqa_regular"
            android:textColor="@color/top"/>

        <TextView
            android:id="@+id/search_no_result_text2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보다 일반적인 단어로 입력해보세요.\n검색어의 철자 혹은 띄어쓰기를 다시 확인해 보세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_no_result_text1_tv"
            android:layout_marginTop="24dp"
            android:textSize="12sp"
            android:fontFamily="@font/spoqa_medium"
            android:textColor="@color/gray_2"
            android:textAlignment="center"
            android:lineSpacingExtra="7dp" />

        <ImageView
            android:id="@+id/search_no_result_flag_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_no_result_text2_tv"
            android:layout_marginTop="41dp"/>

        <TextView
            android:id="@+id/search_no_result_text3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다른 태그로 검색해보셨나요?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_no_result_flag_iv"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:fontFamily="@font/spoqa_medium"
            android:textColor="@color/gray_2"
            android:textAlignment="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/animation_view_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <com.airbnb.lottie.LottieAnimationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/animation_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:duplicateParentState="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading_data.json"
            app:lottie_loop="true"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>