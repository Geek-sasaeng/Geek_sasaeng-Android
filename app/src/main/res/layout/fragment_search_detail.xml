<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id='@+id/search_detail_sort_img'
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_sort"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/search_detail_people_spinner"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/spinner_outline_unclicked"
        android:popupBackground="@drawable/spinner_outline_clicked"
        tools:listitem="@layout/item_delivery_people_spinner"
        android:spinnerMode="dropdown"
        android:entries="@array/home_dropdown1"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/search_detail_sort_img"
        app:layout_constraintBottom_toBottomOf="@id/search_detail_sort_img"
        app:layout_constraintStart_toEndOf="@id/search_detail_sort_img" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="@id/search_detail_people_spinner"
        app:layout_constraintBottom_toBottomOf="@id/search_detail_people_spinner"
        app:layout_constraintStart_toEndOf="@id/search_detail_people_spinner"
        app:layout_constraintEnd_toEndOf="parent">

        <!--아침,점심,저녁,야식 선택-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/search_detail_cb1"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="아침"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <CheckBox
                android:id="@+id/search_detail_cb2"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="점심"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <CheckBox
                android:id="@+id/search_detail_cb3"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="저녁"
                android:layout_marginEnd="8dp"
                android:gravity="center"/>

            <CheckBox
                android:id="@+id/search_detail_cb4"
                android:height="35dp"
                android:paddingHorizontal="10dp"
                android:button="@null"
                android:textSize="14sp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_outline_unclicked"
                android:textColor="@drawable/selector_time_radiobtn_text"
                android:fontFamily="@font/spoqa_medium"
                android:text="야식"
                android:gravity="center"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/search_detail_back_logo_ic"
        android:layout_width="72dp"
        android:layout_height="79dp"
        android:src="@drawable/ic_logo_search_back"
        android:layout_marginBottom="164dp"
        app:tint="#80F8FCFF"
        android:tintMode="src_atop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/search_detail_swipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_detail_sort_img">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_detail_party_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="13dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_detail_sort_img"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/search_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_progress_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_detail_swipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!--android:background="#40EFEFEF"-->

        <ProgressBar
            android:id="@+id/search_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>