<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="23dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_your_chatting_profile_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="3.7dp"
        android:src="@drawable/ic_default_profile2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_your_chatting_profile_iv">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/item_your_chatting_not_read_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/gray_0"
            app:cardElevation="0dp" >

            <TextView
                android:id="@+id/item_your_chatting_chatting_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요~안녕안녕안녕안녕안녕안녕안녕안녕안녕 안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕"
                android:textColor="@color/black"
                android:paddingHorizontal="18dp"
                android:paddingVertical="10dp"
                android:lineHeight="20sp"
                android:textSize="15sp"
                android:fontFamily="@font/spoqa_medium" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_your_chatting_not_read_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:textSize="12sp"
            android:text="0"
            android:fontFamily="@font/spoqa_medium"
            android:paddingHorizontal="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>