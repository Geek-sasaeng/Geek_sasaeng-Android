<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/report_chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/report_chat_back_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_back"
            android:backgroundTint="#D9D9D9"
            android:layout_marginLeft="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/report_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고하기"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/report_chat_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/report_chat_user_report_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 신고"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/report_chat_user_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/report_chat_user_report_tv">

                <TextView
                    android:id="@+id/report_chat_user_1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp"
                    android:text="비매너 사용자에요"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/report_chat_user_1_btn"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_report_detail"
                    app:layout_constraintTop_toTopOf="@id/report_chat_user_1_tv"
                    app:layout_constraintBottom_toBottomOf="@id/report_chat_user_1_tv"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/report_chat_user_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@id/report_chat_user_1">

                <TextView
                    android:id="@+id/report_chat_user_2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp"
                    android:text="욕설을 해요"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/report_chat_user_2_btn"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_report_detail"
                    app:layout_constraintTop_toTopOf="@id/report_chat_user_2_tv"
                    app:layout_constraintBottom_toBottomOf="@id/report_chat_user_2_tv"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/report_chat_user_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@id/report_chat_user_2">

                <TextView
                    android:id="@+id/report_chat_user_3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp"
                    android:text="성희롱을 해요"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/report_chat_user_3_btn"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_report_detail"
                    app:layout_constraintTop_toTopOf="@id/report_chat_user_3_tv"
                    app:layout_constraintBottom_toBottomOf="@id/report_chat_user_3_tv"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/report_chat_user_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@id/report_chat_user_3">

                <TextView
                    android:id="@+id/report_chat_user_4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp"
                    android:text="사기를 당했어요"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/report_chat_user_4_btn"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_report_detail"
                    app:layout_constraintTop_toTopOf="@id/report_chat_user_4_tv"
                    app:layout_constraintBottom_toBottomOf="@id/report_chat_user_4_tv"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/report_chat_user_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@id/report_chat_user_4">

                <TextView
                    android:id="@+id/report_chat_user_5_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp"
                    android:text="거래 및 환불 신고"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/report_chat_user_5_btn"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_report_detail"
                    app:layout_constraintTop_toTopOf="@id/report_chat_user_5_tv"
                    app:layout_constraintBottom_toBottomOf="@id/report_chat_user_5_tv"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/report_chat_user_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@id/report_chat_user_5">

                <TextView
                    android:id="@+id/report_chat_user_6_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_3"
                    android:textSize="14sp"
                    android:text="기타 사유 선택"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/report_chat_user_6_btn"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_report_detail"
                    app:layout_constraintTop_toTopOf="@id/report_chat_user_6_tv"
                    app:layout_constraintBottom_toBottomOf="@id/report_chat_user_6_tv"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
