<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatting_room_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/chatting_room_back_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_back"
            android:backgroundTint="#D9D9D9"
            android:layout_marginLeft="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/chatting_room_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅방 이름"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/chatting_room_option_btn"
            android:src="@drawable/ic_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="26dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatting_room_chatting_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/chatting_room_bottom_bar"
        app:layout_constraintTop_toBottomOf="@id/chatting_room_toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="71dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatting_room_top_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#D1F6F9FB"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/chatting_room_toolbar"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/chatting_room_section_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="29dp"
            android:src="@drawable/ic_icon_coin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chatting_room_top_layout_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴판 보기 / 계좌번호"
            android:textColor="@color/top"
            android:textSize="14sp"
            android:fontFamily="@font/spoqa_medium"
            android:textFontWeight="500"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/chatting_room_section_iv"
            app:layout_constraintBottom_toBottomOf="@id/chatting_room_section_iv"
            app:layout_constraintStart_toEndOf="@id/chatting_room_section_iv" />

        <androidx.cardview.widget.CardView
            android:id="@+id/chatting_room_top_layout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/chatting_room_section_iv"
            app:layout_constraintBottom_toBottomOf="@id/chatting_room_section_iv"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/main">

            <TextView
                android:id="@+id/chatting_room_top_layout_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/round_border_button"
                android:fontFamily="@font/spoqa_medium"
                android:text="주문 완료 / 송금 완료"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/chatting_room_section_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/chatting_room_section_iv" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/chatting_room_bottom_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/main"
        app:layout_constraintBottom_toTopOf="@id/chatting_room_bottom_bar" />

    <TextView
        android:id="@+id/chatting_room_bottom_member_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/4 명"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="29dp"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatting_room_bottom_menu_bar"
        app:layout_constraintBottom_toBottomOf="@id/chatting_room_bottom_menu_bar" />

    <TextView
        android:id="@+id/chatting_room_bottom_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/spoqa_medium"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/chatting_room_bottom_menu_bar"
        app:layout_constraintBottom_toBottomOf="@id/chatting_room_bottom_menu_bar"
        app:layout_constraintStart_toEndOf="@id/chatting_room_bottom_member_status" />

    <ImageView
        android:id="@+id/chatting_room_bottom_next_btn"
        android:layout_width="23dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_next"
        android:tint="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginRight="22dp"
        android:paddingStart="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatting_room_bottom_menu_bar"
        app:layout_constraintBottom_toBottomOf="@id/chatting_room_bottom_menu_bar" />

    <TextView
        android:id="@+id/chatting_room_bottom_enter_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴 입력하러 가기"
        android:fontFamily="@font/spoqa_medium"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="@id/chatting_room_bottom_menu_bar"
        app:layout_constraintBottom_toBottomOf="@id/chatting_room_bottom_menu_bar"
        app:layout_constraintEnd_toStartOf="@id/chatting_room_bottom_next_btn" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatting_room_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/chatting_room_album_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_album"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/chatting_room_send_tv"
            app:layout_constraintBottom_toBottomOf="@id/chatting_room_send_tv"/>

        <EditText
            android:id="@+id/chatting_room_chatting_text_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="입력하세요"
            android:textColorHint="@color/gray_2"
            android:textColor="@color/top"
            android:textSize="16sp"
            android:paddingVertical="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="22dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/chatting_room_album_iv"
            app:layout_constraintEnd_toStartOf="@id/chatting_room_send_tv" />

        <TextView
            android:id="@+id/chatting_room_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="16sp"
            android:textColor="@color/gray_2"
            android:padding="4dp"
            android:enabled="false"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>