<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatting_room_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/chatting_room_back_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_back"
            android:backgroundTint="#D9D9D9"
            android:layout_marginLeft="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/chatting_room_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅방 이름"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqa_medium"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/chatting_room_option_btn"
            android:src="@drawable/ic_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="26dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatting_room_chatting_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chatting_room_toolbar"
        app:layout_constraintBottom_toTopOf="@id/chatting_room_bottom_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatting_room_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/chatting_room_album_iv"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/ic_settings"
            android:padding="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/chatting_room_chatting_text_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="입력하세요"
            android:textColorHint="@color/gray_2"
            android:textColor="@color/top"
            android:textSize="16sp"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/spoqa_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/chatting_room_album_iv"
            app:layout_constraintEnd_toStartOf="@id/chatting_room_send_tv" />

        <TextView
            android:id="@+id/chatting_room_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="16sp"
            android:textColor="@color/gray_2"
            android:padding="4dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>