<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_top_title_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F5F9"
        android:paddingTop="30dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/profile_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 정보"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/profile_alarm_iv"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@drawable/ic_alarm"
            android:backgroundTint="#D9D9D9"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/profile_title_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_top_title_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="16dp"
                android:background="#F1F5F9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/profile_layout2">

                <!--프로필 카드-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_card_cv"
                    android:layout_width="0dp"
                    android:layout_height="166dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="23dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/profile_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/profile_card_layout_blue_top"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@color/main">

                            <!--회원 등급-->
                            <TextView
                                android:id="@+id/profile_card_layout_blue_top_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="신입생"
                                android:textSize="12sp"
                                android:fontFamily="@font/spoqa_bold"
                                android:textColor="@color/white"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="20dp"/>

                            <ImageView
                                android:id="@+id/profile_card_layout_blue_top_bar"
                                android:layout_width="2dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_white_bar"
                                android:scaleType="fitXY"
                                app:layout_constraintStart_toEndOf="@id/profile_card_layout_blue_top_grade"
                                app:layout_constraintTop_toTopOf="@id/profile_card_layout_blue_top_grade"
                                app:layout_constraintBottom_toBottomOf="@id/profile_card_layout_blue_top_grade"
                                android:layout_marginStart="12dp"/>

                            <!--복학까지 남은 학점-->
                            <TextView
                                android:id="@+id/profile_card_layout_blue_top_left_credit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="복학까지 5학점 남았어요"
                                android:textSize="12sp"
                                android:fontFamily="@font/spoqa_bold"
                                android:textColor="@color/white"
                                app:layout_constraintTop_toTopOf="@id/profile_card_layout_blue_top_grade"
                                app:layout_constraintBottom_toBottomOf="@id/profile_card_layout_blue_top_grade"
                                app:layout_constraintStart_toEndOf="@id/profile_card_layout_blue_top_bar"
                                android:layout_marginStart="12dp"
                                />

                            <ImageView
                                android:id="@+id/profile_card_layout_blue_top_more"
                                android:layout_marginStart="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_right_white"
                                app:layout_constraintTop_toTopOf="@id/profile_card_layout_blue_top_left_credit"
                                app:layout_constraintBottom_toBottomOf="@id/profile_card_layout_blue_top_left_credit"
                                app:layout_constraintStart_toEndOf="@id/profile_card_layout_blue_top_left_credit" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/profile_card_layout_while"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/profile_card_layout_blue_top"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:id="@+id/profile_card_bar_iv"
                                android:layout_width="24.32dp"
                                android:layout_height="102dp"
                                android:src="@drawable/ic_profile_card_heart_bar_level1"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="-1dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:id="@+id/profile_card_nick_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/spoqa_bold"
                                android:textSize="20sp"
                                android:textColor="@color/top"
                                app:layout_constraintStart_toEndOf="@id/profile_card_bar_iv"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/profile_card_univ_tv"
                                android:layout_marginStart="5.68dp"
                                android:layout_marginTop="34dp"/>

                            <TextView
                                android:id="@+id/profile_card_univ_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:fontFamily="@font/spoqa_medium"
                                android:textSize="13sp"
                                android:textColor="@color/gray_3"
                                android:layout_marginTop="9dp"
                                app:layout_constraintBottom_toTopOf="@id/profile_card_dormitory_name_tv"
                                app:layout_constraintTop_toBottomOf="@id/profile_card_nick_name_tv"
                                app:layout_constraintStart_toStartOf="@id/profile_card_nick_name_tv" />

                            <TextView
                                android:id="@+id/profile_card_dormitory_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:fontFamily="@font/spoqa_medium"
                                android:textSize="13sp"
                                android:textColor="@color/gray_3"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="31dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/profile_card_univ_tv"
                                app:layout_constraintStart_toStartOf="@id/profile_card_nick_name_tv" />

                            <ImageView
                                android:id="@+id/profile_card_shadow_iv"
                                android:layout_width="125.5dp"
                                android:layout_height="104.29dp"
                                android:layout_marginBottom="-6.5dp"
                                android:src="@drawable/ic_profile_shadow"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/profile_card_img_cv"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_marginEnd="31.5dp"
                                android:layout_marginBottom="6.5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="55dp">
                                <ImageView
                                    android:visibility="invisible"
                                    android:id="@+id/profile_card_img_iv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/profile_thumbs_up" />
                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_layout1"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_my_activity_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profile_layout2"
                    app:layout_constraintBottom_toTopOf="@id/profile_thick_line">

                    <!--아무것도 활동이 없을 때-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/profile_my_activity_no_info_layout"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/profile_my_activity_no_info_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_my_profile_logo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="22dp"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/profile_my_activity_no_info_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="진행한 활동이 없어요"
                            android:textSize="18sp"
                            android:textColor="@color/gray_3"
                            android:fontFamily="@font/spoqa_medium"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/profile_my_activity_no_info_iv"
                            android:layout_marginEnd="30dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--나의 활동 보기-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/profile_my_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="28dp"
                        android:paddingVertical="5dp"
                        app:layout_constraintTop_toTopOf = "parent">

                        <TextView
                            android:id="@+id/profile_my_activity_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_medium"
                            android:text="나의 활동 보기"
                            android:textColor="@color/top"
                            android:textFontWeight="500"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/profile_my_activity_btn"
                            android:layout_width="16.5dp"
                            android:layout_height="16.5dp"
                            android:backgroundTint="@color/white"
                            android:clickable="false"
                            android:src="@drawable/ic_arrow_right_profile"
                            app:layout_constraintBottom_toBottomOf="@id/profile_my_activity_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/profile_my_activity_tv" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile_my_activity1_cv"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/profile_my_activity2_cv"
                        app:layout_constraintTop_toBottomOf="@id/profile_my_activity"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="22dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/profile_my_activity1_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/profile_my_activity1_title_tv"
                                android:text="배달파티"
                                android:textColor="@color/main"
                                android:textSize="11sp"
                                android:fontFamily="@font/spoqa_regular"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="9dp"/>

                            <TextView
                                android:id="@+id/profile_my_activity1_title_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/profile_my_activity1_type_tv"
                                app:layout_constraintBottom_toTopOf="@id/profile_my_activity1_date_tv"
                                android:text="한둘셋넷닷엿..."
                                android:textColor="@color/top"
                                android:textSize="13sp"
                                android:fontFamily="@font/spoqa_bold"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:id="@+id/profile_my_activity1_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/profile_my_activity1_title_tv"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="2022.02.02"
                                android:textColor="@color/gray_2"
                                android:textSize="11sp"
                                android:fontFamily="@font/spoqa_medium"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="21dp"/>

                            <ImageView
                                android:id="@+id/profile_my_activity1_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_delivery_party"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile_my_activity2_cv"
                        android:visibility="invisible"
                        app:layout_constraintStart_toEndOf="@id/profile_my_activity1_cv"
                        app:layout_constraintEnd_toStartOf="@id/profile_my_activity3_cv"
                        app:layout_constraintTop_toTopOf="@id/profile_my_activity1_cv"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        android:layout_marginStart="7dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/profile_my_activity2_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/profile_my_activity2_title_tv"
                                android:text="심부름"
                                android:textColor="@color/main"
                                android:textSize="11sp"
                                android:fontFamily="@font/spoqa_regular"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="9dp"/>

                            <TextView
                                android:id="@+id/profile_my_activity2_title_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/profile_my_activity2_type_tv"
                                app:layout_constraintBottom_toTopOf="@id/profile_my_activity2_date_tv"
                                android:text="한둘셋넷닷엿..."
                                android:textColor="@color/top"
                                android:textSize="13sp"
                                android:fontFamily="@font/spoqa_bold"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:id="@+id/profile_my_activity2_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/profile_my_activity2_title_tv"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="2022.02.02"
                                android:textColor="@color/gray_2"
                                android:textSize="11sp"
                                android:fontFamily="@font/spoqa_medium"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="21dp"/>

                            <ImageView
                                android:id="@+id/profile_my_activity2_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_errand"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile_my_activity3_cv"
                        android:visibility="invisible"
                        app:layout_constraintStart_toEndOf="@id/profile_my_activity2_cv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/profile_my_activity1_cv"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        android:layout_marginStart="7dp"
                        android:layout_width="0dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/profile_my_activity3_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/profile_my_activity3_title_tv"
                                android:text="거래"
                                android:textColor="@color/main"
                                android:textSize="11sp"
                                android:fontFamily="@font/spoqa_regular"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="9dp"/>

                            <TextView
                                android:id="@+id/profile_my_activity3_title_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/profile_my_activity3_type_tv"
                                app:layout_constraintBottom_toTopOf="@id/profile_my_activity3_date_tv"
                                android:text="한둘셋넷닷엿..."
                                android:textColor="@color/top"
                                android:textSize="13sp"
                                android:fontFamily="@font/spoqa_bold"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:id="@+id/profile_my_activity3_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/profile_my_activity3_title_tv"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="2022.02.02"
                                android:textColor="@color/gray_2"
                                android:textSize="11sp"
                                android:fontFamily="@font/spoqa_medium"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="21dp"/>

                            <ImageView
                                android:id="@+id/profile_my_activity3_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_deal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <View
                    android:id="@+id/profile_thick_line"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_my_activity_info_layout"/>

                <!--나의 정보 수정-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_my_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="28dp"
                    android:paddingVertical="5dp"
                    app:layout_constraintTop_toBottomOf="@id/profile_thick_line">

                    <TextView
                        android:id="@+id/profile_my_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_medium"
                        android:text="나의 정보 수정"
                        android:textColor="@color/top"
                        android:textFontWeight="500"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
