<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="209dp"
            android:layout_height="209dp"
            android:src="@drawable/temp_logo"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/splash_sub_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쉽고 편리한 연결 메이트"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/gmarket_medium"
            app:layout_constraintTop_toBottomOf="@id/splash_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/splash_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="긱사생"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:fontFamily="@font/gmarket_medium"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@id/splash_sub_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>