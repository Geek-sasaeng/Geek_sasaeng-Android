<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Signup.Basic.StepTwoFragment">

    <TextView
        android:id="@+id/step_two_school_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:text="학교 선택"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/step_two_school_sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_border_button_gray1"
        android:popupBackground="@drawable/round_border_button_gray1"
        tools:listitem="@layout/item_signup_university_spinner"
        android:elevation="0dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        app:layout_constraintTop_toBottomOf="@id/step_two_school_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <!--이메일 입력-->
    <TextView
        android:id="@+id/step_two_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="이메일 입력"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_two_school_sp" />

    <EditText
        android:id="@+id/step_two_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="입력하세요"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_1"
        android:backgroundTint="@color/gray_1"
        android:fontFamily="@font/spoqa_medium"
        android:textSize="15sp"
        android:paddingLeft="13dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        app:layout_constraintTop_toBottomOf="@id/step_two_email_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/step_one_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/step_two_email_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/step_two_email2_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="\@"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_1"
            android:backgroundTint="@color/gray_1"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="15sp"
            android:editable="false"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/step_two_email_check_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/step_two_email_check_btn"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:textSize="15sp"
            android:text="인증번호 전송"
            android:fontFamily="@font/spoqa_medium"
            android:background="@drawable/signup_btn"
            android:textColor="@color/main"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/step_two_next_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/main"
        android:background="@drawable/round_border"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>