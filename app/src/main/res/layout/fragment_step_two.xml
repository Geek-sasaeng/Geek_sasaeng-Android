<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StepTwoFragment">

    <!--학교선택-->
    <TextView
        android:id="@+id/step_two_school_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="학교 선택"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/step_two_school_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="입력하세요"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_two_school_tv" />

    <View
        android:id="@+id/step_two_school_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="#a8a8a8"
        app:layout_constraintStart_toStartOf="@+id/step_two_school_et"
        app:layout_constraintTop_toBottomOf="@+id/step_two_school_et"
        app:layout_constraintEnd_toEndOf="@id/step_two_school_et"/>

    <!--이메일 입력-->
    <TextView
        android:id="@+id/step_two_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="이메일 입력"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_two_school_underscore_view"
        />

    <EditText
        android:id="@+id/step_two_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="입력하세요"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_two_email_tv" />

    <View
        android:id="@+id/step_two_email_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="#a8a8a8"
        app:layout_constraintStart_toStartOf="@+id/step_two_email_et"
        app:layout_constraintTop_toBottomOf="@+id/step_two_email_et"
        app:layout_constraintEnd_toEndOf="@id/step_two_email_et"/>

    <TextView
        android:id="@+id/step_two_at_sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/step_two_email_underscore_view"
        app:layout_constraintStart_toStartOf="@id/step_two_school_underscore_view"/>


    <EditText
        android:id="@+id/step_two_email2_input_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@null"
        android:hint="직접입력"
        android:inputType="textWebEmailAddress"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/step_two_at_sign_tv"
        app:layout_constraintEnd_toStartOf="@id/step_two_email_check_tv"
        app:layout_constraintStart_toEndOf="@+id/step_two_at_sign_tv"
        app:layout_constraintTop_toTopOf="@+id/step_two_at_sign_tv" />

    <View
        android:id="@+id/step_two_email2_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="#a8a8a8"
        app:layout_constraintEnd_toEndOf="@+id/step_two_email2_input_et"
        app:layout_constraintStart_toStartOf="@+id/step_two_email2_input_et"
        app:layout_constraintTop_toBottomOf="@+id/step_two_email2_input_et"/>

    <TextView
        android:id="@+id/step_two_email_check_tv"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_background_border"
        android:gravity="center"
        android:text="인증번호 전송"
        android:textSize="13sp"
        android:textColor="@color/main"
        app:layout_constraintStart_toEndOf="@id/step_two_email2_input_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_two_email2_input_et"
        app:layout_constraintBottom_toBottomOf="@id/step_two_email2_input_et"/>

</androidx.constraintlayout.widget.ConstraintLayout>