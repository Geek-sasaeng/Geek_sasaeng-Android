<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Signup.StepTwoFragment">

    <TextView
        android:id="@+id/step_two_school_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:text="학교선택"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/step_two_school_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="입력하세요"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_1"
        android:backgroundTint="@color/gray_1"
        android:fontFamily="@font/spoqa_medium"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:paddingLeft="13dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        app:layout_constraintTop_toBottomOf="@id/step_two_school_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <!--이메일 입력-->
    <TextView
        android:id="@+id/step_two_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="이메일 입력"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_two_school_et"
        />

    <EditText
        android:id="@+id/step_two_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="입력하세요"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_1"
        android:backgroundTint="@color/gray_1"
        android:fontFamily="@font/spoqa_medium"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:paddingLeft="13dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        app:layout_constraintTop_toBottomOf="@id/step_two_email_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/step_two_email2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/step_two_email_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/step_two_email2_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:hint="\@"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_1"
            android:backgroundTint="@color/gray_1"
            android:fontFamily="@font/spoqa_medium"
            android:textSize="15sp"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="27dp" />

        <Button
            android:id="@+id/step_two_email_check_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="인증번호 전송"
            android:textSize="13sp"
            android:fontFamily="@font/spoqa_medium"
            android:background="@drawable/round_background_border"
            android:backgroundTint="@color/white"
            android:textColor="@color/main"
            android:layout_weight="0.8"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="27dp" />

    </LinearLayout>

    <Button
        android:id="@+id/step_two_next_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/main"
        android:background="@drawable/round_corner"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/spoqa_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>