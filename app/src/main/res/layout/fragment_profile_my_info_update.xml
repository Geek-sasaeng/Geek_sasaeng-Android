                    android:fontFamily="@font/spoqa_medium"
                    android:textSize="15sp"
                    android:textFontWeight="500"
                    android:textColor="@color/top"
                    android:textStyle="bold"
                    android:lineHeight="12dp"
                    android:layout_marginVertical="15dp"
