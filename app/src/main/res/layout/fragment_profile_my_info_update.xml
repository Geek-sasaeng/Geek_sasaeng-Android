                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/gray_2"
                android:textSize="12sp"
                android:textFontWeight="500"
                android:fontFamily="@font/spoqa_medium"
                android:layout_marginTop="39dp"
