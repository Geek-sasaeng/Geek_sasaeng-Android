                android:textSize="13sp"
                android:fontFamily="@font/spoqa_medium"
                android:background="@drawable/round_border_button_gray0"
                android:textColor="@color/gray_2"
                android:layout_marginEnd="25dp"
                app:layout_constraintBottom_toBottomOf="@id/profile_my_info_update_line1"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <View
                android:id="@+id/profile_my_info_update_line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray_0"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profile_my_info_update_nickname_btn_o"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_nickname_tv" />

            <TextView
