<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_my_info_update_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_my_info_update_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="@id/profile_my_info_update_title"
            app:layout_constraintBottom_toBottomOf="@id/profile_my_info_update_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/profile_my_info_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정하기"
            android:textColor="@color/top"
            android:fontFamily="@font/spoqa_bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/profile_my_info_update_complete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="#BABABA"
            android:textSize="16sp"
            android:textFontWeight="700"
            android:fontFamily="@font/spoqa_medium"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--프로필-->
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_user_img_cv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_width="166dp"
                android:layout_height="166dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profile_my_info_update_user_img_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_default_profile2"/>

                <ImageView
                    android:id="@+id/profile_my_info_update_user_img_change_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_change"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_my_info_update_dormitory_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기숙사"
                android:textColor="@color/gray_2"
                android:textSize="12sp"
                android:textFontWeight="500"
                android:fontFamily="@font/spoqa_medium"
                android:layout_marginTop="64dp"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_user_img_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_my_info_update_dormitory_cv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/gray_0"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_dormitory_title_tv">

                <TextView
                    android:id="@+id/profile_my_info_update_dormitory_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별별학사"
                    android:textColor="@color/main"
                    android:textSize="15sp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/spoqa_medium"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="15dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_my_info_update_dormitory_cv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/line"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintStart_toEndOf="@id/profile_my_info_update_dormitory_cv1"
                app:layout_constraintEnd_toStartOf="@id/profile_my_info_update_dormitory_cv3"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_dormitory_title_tv">

                <TextView
                    android:id="@+id/profile_my_info_update_dormitory_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별별학사"
                    android:textColor="@color/gray_2"
                    android:textSize="15sp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/spoqa_medium"
                    android:layout_marginVertical="7dp"
                    android:layout_marginHorizontal="15dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_my_info_update_dormitory_cv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/line"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                android:layout_marginEnd="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_dormitory_title_tv">

                <TextView
                    android:id="@+id/profile_my_info_update_dormitory_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별별학사"
                    android:textColor="@color/gray_2"
                    android:textSize="15sp"
                    android:textFontWeight="500"
                    android:fontFamily="@font/spoqa_medium"
