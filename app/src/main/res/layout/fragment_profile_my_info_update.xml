            <TextView
                android:id="@+id/profile_my_info_update_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/gray_2"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_update_id_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_id_title_tv" />

            <View
                android:id="@+id/profile_my_info_update_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
