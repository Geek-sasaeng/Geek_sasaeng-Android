                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_dormitory_cv1" />

            <TextView
                android:id="@+id/profile_my_info_update_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/top"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_update_nickname_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_nickname_title_tv" />

            <ImageView
                android:id="@+id/profile_my_info_update_nickname_pencil_iv"
