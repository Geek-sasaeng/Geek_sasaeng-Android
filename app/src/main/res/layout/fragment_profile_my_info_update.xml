                android:layout_height="wrap_content"
                android:text="이메일"
                android:textColor="@color/gray_2"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/spoqa_medium"
                app:layout_constraintStart_toStartOf="@id/profile_my_info_update_email_title_tv"
                app:layout_constraintTop_toBottomOf="@id/profile_my_info_update_email_title_tv" />

            <View
                android:id="@+id/profile_my_info_update_line5"
