<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/gray_0"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_gray_square" android:top="10dp" android:start="9dp" android:end="9dp" android:bottom="10dp"/>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/main"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_check_white_square" android:top="10dp" android:start="9dp" android:end="9dp" android:bottom="10dp"/>
        </layer-list>
    </item>
</selector>